<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:PrismaAI.UI.Views"
       x:Class="PrismaAI.UI.AppShell"
       Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="首页" Icon="home.png" ContentTemplate="{DataTemplate views:MainPage}" Route="main" />
        <ShellContent Title="字幕" Icon="caption.png" ContentTemplate="{DataTemplate views:SubtitlePage}" Route="subtitle" />
        <ShellContent Title="设置" Icon="settings.png" ContentTemplate="{DataTemplate views:SettingsPage}" Route="settings" />
    </TabBar>

</Shell>
